<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="?android:attr/dividerVertical"
    android:orientation="vertical"
    >

        <EditText
            android:id="@+id/taskText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="top"
            android:padding="6dp"
            android:gravity="top"
            android:scrollbars="vertical"
            android:background="@android:color/transparent"
            android:inputType="text|textMultiLine"
            />


    <LinearLayout
        style="@style/SimpleToolbar"
        android:id="@+id/addbar"
        android:background="@color/gray74"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight = "0"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="0sp"
        android:showDividers="middle"
        >
        <ImageButton
            android:id="@+id/btnContext"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:contentDescription="\@…"
            android:src="@drawable/ic_list_white_24dp"
            android:background="@color/gray74"
            android:textColor="#FFFFFF"
            />
        <ImageButton
            android:id="@+id/btnProject"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:src="@drawable/ic_label_outline_white_24dp"
            android:contentDescription="+…"
            android:background="@color/gray74"
            android:textColor="#FFFFFF"
            />
        <ImageButton
            android:id="@+id/btnPrio"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:src="@drawable/ic_star_border_white_24dp"
            android:contentDescription="(.)"
            android:background="@color/gray74"
            android:textColor="#FFFFFF"
            />
        <ImageButton
            android:id="@+id/btnDue"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:src="@drawable/ic_schedule_white_24dp"
            android:contentDescription="due:…"
            android:background="@color/gray74"
            android:textColor="#FFFFFF"
            />
        <ImageButton
            android:id="@+id/btnThreshold"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:contentDescription="t:…"
            android:background="@color/gray74"
            android:src="@drawable/ic_clock_start_white_24dp"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>
    <LinearLayout
            style="@style/SimpleToolbar"
            android:id="@+id/savebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight = "0"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="0sp"
            android:showDividers="middle"
    >
        <ImageButton
                android:id="@+id/btnNext"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:contentDescription="next"
                android:src="@drawable/ic_add_white_24dp"
                android:textColor="#FFFFFF"
        />
        <ImageButton
                android:id="@+id/btnSave"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:src="@drawable/ic_save_white_24dp"
                android:contentDescription="@string/save_task"
                android:textColor="#FFFFFF"
        />

    </LinearLayout>
</LinearLayout>
