<resources>
    <!-- Launch Screen -->
    <style name="LaunchScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/simple_primary</item>
        <item name="colorPrimaryDark">@color/simple_primary_dark</item>
    </style>

    <!-- Light theme -->
    <style name="AppTheme.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/simple_primary</item>
        <item name="colorPrimaryDark">@color/simple_primary_dark</item>
        <item name="colorAccent">@color/simple_accent</item>
        <item name="colorControlActivated">@color/simple_alpha_focus</item>
            <!-- This isn't working right now, I think. -->
            <item name="colorControlHighlight">@color/simple_alpha33</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.Light.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/simple_primary</item>
        <item name="colorPrimaryDark">@color/simple_primary_dark</item>
        <item name="colorAccent">@color/simple_accent</item>
        <item name="colorControlActivated">@color/simple_primary</item>
            <!-- This isn't working right now, I think. -->
            <item name="colorControlHighlight">@color/simple_alpha33</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- Dark theme -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/simple_primary</item>
        <item name="colorPrimaryDark">@color/simple_primary_dark</item>
        <item name="colorAccent">@color/simple_accent</item>
        <item name="colorControlActivated">@color/simple_alpha_focus</item>
            <!-- This isn't working right now, I think. -->
            <item name="colorControlHighlight">@color/simple_alpha33</item> 
        <item name="android:textColorPrimary">@color/white</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyleDark</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/simple_primary</item>
        <item name="colorPrimaryDark">@color/simple_primary_dark</item>
        <item name="colorAccent">@color/simple_accent</item>
        <item name="colorControlActivated">@color/simple_primary</item>
            <!-- This isn't working right now, I think. -->
            <item name="colorControlHighlight">@color/simple_alpha33</item> 
        <item name="android:textColorPrimary">@color/white</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyleDark</item>
    </style>

    <!-- Black theme -->
    <style name="AppTheme.Black.NoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/gray95</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/simple_accent_dark</item>
        <item name="android:colorBackground">@color/black</item>
        <!-- Applies to popup menus that we create manually -->
        <item name="android:popupMenuStyle">@style/DarkPopupMenu</item>
        <!-- Applies to overflow menus -->
        <item name="popupTheme">@style/BlackPopupTheme</item>
    </style>

    <style name="AppTheme.Black.ActionBar" parent="AppTheme.ActionBar">
        <item name="colorPrimary">@color/gray95</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/simple_accent_dark</item>
        <item name="colorControlActivated">@color/simple_primary_dark</item>
        <item name="android:colorBackground">@color/black</item>
        <!-- Applies to popup menus that we create manually -->
        <item name="android:popupMenuStyle">@style/DarkPopupMenu</item>
        <!-- Applies to overflow menus -->
        <item name="popupTheme">@style/BlackPopupTheme</item>
    </style>
</resources>
